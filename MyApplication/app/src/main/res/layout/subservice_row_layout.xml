<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/subservice">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/hair_cut"
        android:layout_marginLeft="10dp"
        android:id="@+id/subservice_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/subservice_name"
        android:layout_toRightOf="@+id/subservice_image"
        android:textColor="#222"
        android:layout_marginLeft="5dp"
        android:textSize="16dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="Foot Massage"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subservice_description"
        android:layout_toRightOf="@+id/subservice_image"
        android:layout_below="@+id/subservice_name"
        android:maxLines="3"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:textSize="12dp"
        android:text="Find the best hair cut salon in the city"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/right_arrow"
        android:src="@drawable/right_arrow"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:padding="10dp"/>

    <View  android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/line"
        android:layout_below="@+id/subservice_description"
        android:background="@android:color/black"/>

</RelativeLayout>
